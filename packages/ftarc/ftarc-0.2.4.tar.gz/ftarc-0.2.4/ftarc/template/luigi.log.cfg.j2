[loggers]
keys=root

[handlers]
keys=consoleHandler,fileHandler

[formatters]
keys=customFormatter

[logger_root]
level=NOTSET
handlers=consoleHandler,fileHandler

[handler_consoleHandler]
class=StreamHandler
level={{ console_log_level }}
formatter=customFormatter
args=(sys.stdout,)

[handler_fileHandler]
class=FileHandler
level={{ file_log_level }}
formatter=customFormatter
args=('{{ log_txt_path }}', 'a')

[formatter_customFormatter]
format=%(asctime)s %(name)-18s %(levelname)-9s %(message)s
datefmt=%Y-%m-%d %H:%M:%S

[retcode]
already_running=10
missing_data=20
not_run=25
task_failed=30
scheduling_error=35
unhandled_exception=40

[scheduler]
retry_count=0
